      <h1 class="text-center mb-3"><%= strings['general']['unirse_tecno'][lang] %></h1>
      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
          <div id="exteriorJoinForm">
            <form id="joinForm" action="/unirse" method="POST">
              <div id="alertJoinInfo"></div>
              <div class="form-group mb-2">
                <div class="row">
                  <div class="col">
                    <label for="inputJoinName" class="input-label"><%= strings['general']['nom'][lang] %></label>
                    <input type="text" class="form-control" id="inputJoinName" name="name" maxlength="50" required>
                  </div>
                  <div class="col">
                    <label for="inputJoinSurname" class="input-label"><%= strings['general']['cognom'][lang] %></label>
                    <input type="text" class="form-control" id="inputJoinSurname" name="surname" maxlength="50" required>
                  </div>
                </div>
              </div>
              <div class="form-group mb-2">
                <div class="row">
                  <div class="col">
                    <label for="inputJoinEmail" class="input-label"><%= strings['general']['correu'][lang] %></label>
                    <input type="email" class="form-control" id="inputJoinEmail" name="email" maxlength="100" required>
                  </div>
                  <div class="col">
                    <label for="inputTittle" class="input-label"><%= strings['general']['nom_usuari'][lang] %></label>
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">@</span>
                        </div>
                        <input type="Text" class="form-control" id="inputJoinUsername" name="username" maxlength="39" required>
                      </div>
                    </div>
                </div>
              </div>
              <div class="form-group mb-2">
                <label for="inputJoinBio" class="input-label"><%= strings['general']['biografia'][lang] %></label>
                <textarea type="text" class="form-control" id="inputJoinBio" name="description" maxlength="160" rows="2" required></textarea>
              </div>
              <!--<div class="form-group mb-2">
                <label for="inputJoinLink" class="input-label"><%= strings['perfil']['enllaÃ§'][lang] %></label>
                <input type="text" class="form-control" id="inputJoinLink" name="socialLink" maxlength="100" required>
              </div>-->
              <div class="form-group">
                <div class="row">
                  <div class="col">
                    <label for="inputJoinPass" class="input-label"><%= strings['menu']['contrasenya'][lang] %> <small> <%= strings['general']['pass_min_length'][lang] %></small></label>
                    <input type="password" class="form-control" id="inputJoinPass" name="pass" maxlength="100" minlength="8" required>
                  </div>
                  <div class="col">
                    <label for="inputJoinPass2" class="input-label"><%= strings['reset_pass']['repeteix_pass'][lang] %></small></label>
                    <input type="password" class="form-control" id="inputJoinPass2" name="pass" maxlength="100" minlength="8" required>
                  </div>
                </div>
              </div>
              <div class="form-group text-center">
                <button type="submit" class="btn btn-primary"><%= strings['general']['unirse'][lang] %></button>
              </div>
            </form>
          </div>
        </div>
        <div class="col-md-2"></div>
      </div>

    </div>
  </div>
